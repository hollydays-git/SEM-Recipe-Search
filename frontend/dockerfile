# syntax=docker/dockerfile:1

ARG NODE_VERSION=24.11.0

################################################################################
# Stage 1 — build the application
FROM node:${NODE_VERSION}-alpine AS build

WORKDIR /usr/src/app

# Копируем только package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Устанавливаем все зависимости (devDependencies нужны для сборки)
RUN npm install

# Копируем весь исходный код
COPY . .

# Собираем проект
RUN npm run build

################################################################################
# Stage 2 — runtime (production)
FROM node:${NODE_VERSION}-alpine AS runtime

WORKDIR /usr/src/app

# Устанавливаем serve для раздачи статических файлов
RUN npm install -g serve

# Копируем только папку dist из стадии сборки
COPY --from=build /usr/src/app/dist ./dist

# Прокидываем порт
EXPOSE 5173

# Команда запуска
CMD ["serve", "-s", "dist", "-l", "5173"]
